<main class="d-flex justify-content-center align-items-center min-vh-100 bg-secondary w-100 px-0">
  <div class="card p-4 shadow" style="max-width: 400px; width: 100%;">

    <h2 class="card-title text-center mb-4">Đặt lại mật khẩu</h2>

    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    {{#if success}}
    <div class="alert alert-success">{{success}}</div>
    {{/if}}

    <form action="/page/password/reset" method="POST">

      <!-- Ẩn email hoặc token nếu cần -->
      <input type="hidden" name="email" value="{{email}}">

      <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu mới</label>
        <input type="password" class="form-control" id="password" name="password" required minlength="6" placeholder="Nhập mật khẩu mới">
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" placeholder="Nhập lại mật khẩu mới">
      </div>

      <button type="submit" class="btn w-100" style="background-color: #343a40; color: white;">Đặt lại mật khẩu</button>
    </form>

    <div class="text-center mt-3">
      <a href="/page/login" class="text-muted text-decoration-none" style="font-size: 14px;">Quay lại đăng nhập</a>
    </div>

  </div>
</main>
