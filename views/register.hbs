<main class="d-flex justify-content-center align-items-center min-vh-100 bg-secondary w-100">
    <div class="card p-4 shadow" style="max-width: 400px; width: 100%;">
        <h2 class="card-title text-center mb-4">Đăng ký</h2>
        <form action="/page/register" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Tên tài khoản</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="mb-3">
                <label for="fullname" class="form-label">Họ và tên</label>
                <input type="text" class="form-control" id="fullname" name="fullname" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="submit" class="btn w-100" style = "background-color: #343a40;color:white">Đăng ký</button>
            <div class="text-center mt-3">
                <a href="/page/login" class="text-muted text-decoration-none" style="font-size: 14px;">Đã có tài khoản? Đăng nhập</a>
            </div>
        </form>
    </div>
</main>

<script>
        document.addEventListener('DOMContentLoaded', function() {
            // Kiểm tra mật khẩu trùng khớp khi submit form
            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                
                if (password !== confirmPassword) {
                    event.preventDefault();
                    alert('Mật khẩu nhập lại không khớp!');
                }
            });
        });
</script>
