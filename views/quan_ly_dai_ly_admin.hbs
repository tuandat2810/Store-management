<div class="agency-list-container w-100">
  <h3 class="agency-list-title text-center mb-5">
    Danh sách đại lý
  </h3>

  <div class="agency-table-container">
    <table class="table table-striped mb-5">
      <thead>
        <tr>
          <th scope="col" class="text-center" style="width: 20%;">Mã đại lý</th>
          <th scope="col" class="text-center" style="width: 20%;">Tên đại lý</th>
          <th scope="col" class="text-center" style="width: 20%;">Loại</th>
          <th scope="col" class="text-center" style="width: 20%;">Quận</th>
          <th scope="col" class="text-center" style="width: 20%;">Trạng thái</th>
        </tr>
      </thead>
      <tbody>
          {{#each agencyList}}
            <tr>
              <td class="text-center">{{ agencyCode }}</td>
              <td class="text-center">{{ name }}</td>
              <td class="text-center">{{ type }}</td>
              <td class="text-center">{{ district }}</td>
              <td class="text-center">
                {{#eq status "Đã duyệt"}}
                  <span class="badge bg-success">Đã được duyệt</span>
                {{/eq}}
                {{#eq status "Đang chờ"}}
                  <span class="badge bg-secondary">Đang chờ duyệt</span>
                {{/eq}}
                {{#eq status "Từ chối"}}
                  <span class="badge bg-danger">Đã bị từ chối</span>
                {{/eq}}
              </td>
            </tr>
          {{/each}}
            <tr>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
            </tr>
            <tr>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
              <td class="text-center">Data demo</td>
            </tr>
      </tbody>
    </table>
  </div>

  <div class="d-flex w-100" style="justify-content: center;">
    <button type="submit" class="btn btn-primary border-0 rounded-5 fw-semibold py-2" 
            style="background-color: #C6BDBD; color: #000; width: 200px;"
            >
        Thêm
    </button>
    <button type="submit" class="btn btn-primary border-0 rounded-5 fw-semibold mx-5 py-2" 
            style="background-color: #C6BDBD; color: #000; width: 200px;"
            >
        Xóa
    </button>
    <button type="submit" class="btn btn-primary border-0 rounded-5 fw-semibold py-2" 
            style="background-color: #C6BDBD; color: #000; width: 200px;"
            >
        Sửa
    </button>
  </div>
</div>