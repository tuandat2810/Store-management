<main class="d-flex justify-content-center align-items-center min-vh-100 bg-secondary w-100 px-0">
  <div class="card p-4 shadow" style="max-width: 400px; width: 100%;">
    
    <h2 class="card-title text-center mb-4">Xác minh OTP</h2>


    {{#if success_msg}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{{success_msg}}}
      </div>
    {{/if}}

    {{#if error_msg}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error_msg}}
      </div>
    {{/if}}
    <!-- OTP Form -->
    <form action="/user/password/otp" method="POST">
      <div class="mb-3">
        <label for="otp" class="form-label">Nhập mã OTP đã gửi qua email</label>
        <input type="text" class="form-control" id="otp" name="otp" required>
      </div>

      <input type="hidden" name="email" value="{{email}}">

      <button type="submit" class="btn w-100" style="background-color: #343a40; color: white;">Xác minh</button>
    </form>

    <div class="text-center mt-3">
      <a href="/user/password/resend-otp?email={{email}}" class="text-muted text-decoration-none" style="font-size: 14px;">Gửi lại OTP</a>

    </div>

  </div>
</main>
