<div class="container mt-4">
  <h2 class="mb-4">Danh sách phiếu xuất hàng</h2>

  {{#each orders}}
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <strong>Mã phiếu:</strong> {{orderCode}} <br>
            <strong>Đại lý:</strong> {{agencyCode}}
          </div>
          <div class="text-end">
            <strong>Ngày lập:</strong> {{formatDate orderDate}} <br>
            <strong>Người lập:</strong> {{createdBy}}
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Đơn vị</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
                <tr>
                  <td>{{productCode}}</td>
                  <td>{{productName}}</td>
                  <td>{{formatCurrency unitPrice}}</td>
                  <td>{{unit}}</td>
                  <td>{{quantity}}</td>
                  <td>{{formatCurrency totalPrice}}</td>
                </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr class="table-secondary">
                <th colspan="5" class="text-end">Tổng cộng:</th>
                <th>{{formatCurrency totalAmount}}</th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  {{/each}}
</div>
