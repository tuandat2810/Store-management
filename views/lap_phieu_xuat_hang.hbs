<div class="container-fluid d-flex flex-column align-items-center w-100" style="width: 100%; height: 100%;margin-top: 32px;">
    <h3 class="mb-5 text-center w-100">
        Lập phiếu xuất hàng
    </h3>
    <form action="/lap-phieu-xuat-hang" method="POST" class="w-100" style="max-width: 600px;">

        <!-- Mã đại lý -->
        <div class="row mb-3">
            <label for="ma_dai_ly" class="col-sm-3 col-form-label">Mã đại lý</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="agencyCode" name="agencyCode" value="{{agencyCode}}" readonly>
            </div>
        </div>
        <!-- Mã phiếu -->
        <div class="row mb-3">
            <label for="ma_phieu" class="col-sm-3 col-form-label">Mã phiếu</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="agencyTicket" name="agencyTicket" value="{{agencyTicket}}" readonly>
            </div>
        </div>
        <!--Mặt hàng -->
        <div class="row mb-3">
            <label for="mat_hang" class="col-sm-3 col-form-label">Mặt hàng</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="mat_hang" name="mat_hang" placeholder="Nhập mặt hàng" required>
            </div>
        </div>
        <!--Số lượng -->
         <div class="row mb-3">
            <label for="so_luong" class="col-sm-3 col-form-label">Số lượng</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="so_luong" name="so_luong" placeholder="Nhập số lượng" required>
            </div>
        </div>
        <!-- Nút -->
        <div class="text-center mt-5">
            <button type="submit" class="btn btn-primary border-0 rounded-5 fw-semibold py-2" 
                style="background-color: #C6BDBD; color: #000; width: 200px;"
                >
                Lập
            </button>
        </div>
    </form>

</div>