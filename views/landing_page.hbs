
<!-- Hero Section -->
<main class="d-flex flex-column align-items-center min-vh-100 bg-light w-100">
    <div class="text-center py-5">
        <h1 class="display-1 fw-bold mb-3">10D</h1>
        <p class="lead">Đơn giản hóa việc quản lý đại lý của bạn.</p>
    </div>


    <!-- Cards Section -->
    <div class="container mb-5">
        <h2 class="text-center mb-4">Thống kê hệ thống</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            <!-- Card 1: Số quận/thành phố -->
            <div class="col">
                <div class="card text-center border-0 h-100">
                    <div class="card-img-top mx-auto mb-3 d-flex align-items-center justify-content-center bg-primary text-white rounded-circle" style="width: 80px; height: 80px;">
                        <span class="fs-2"><i class="bi bi-geo-alt"></i></span>
                    </div>
                    <div class="card-body p-0">
                        <h5 class="card-title">Quận/Thành phố có đại lý</h5>
                        <p class="card-text fs-4 fw-bold">{{totalDistricts}}</p>
                    </div>
                </div>
            </div>
            <!-- Card 2: Số đại lý -->
            <div class="col">
                <div class="card text-center border-0 h-100">
                    <div class="card-img-top mx-auto mb-3 d-flex align-items-center justify-content-center bg-success text-white rounded-circle" style="width: 80px; height: 80px;">
                        <span class="fs-2"><i class="bi bi-shop"></i></span>
                    </div>
                    <div class="card-body p-0">
                        <h5 class="card-title">Tổng số đại lý</h5>
                        <p class="card-text fs-4 fw-bold">{{totalAgencies}}</p>
                    </div>
                </div>
            </div>
            <!-- Card 3: Doanh thu tổng -->
            <div class="col">
                <div class="card text-center border-0 h-100">
                    <div class="card-img-top mx-auto mb-3 d-flex align-items-center justify-content-center bg-warning text-white rounded-circle" style="width: 80px; height: 80px;">
                        <span class="fs-2"><i class="bi bi-cash-stack"></i></span>
                    </div>
                    <div class="card-body p-0">
                        <h5 class="card-title">Tổng doanh thu</h5>
                        <p class="card-text fs-4 fw-bold"> 2.420.500.000đ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
