<style>
  .agency-list-container {
    min-height: 100vh;
    padding: 0;
  }

  .agency-list-title {
    text-align: left;
    font-size: 2rem;
    font-weight: 600;
    margin-top: 32px;
    margin-bottom: 0;
    margin-left: 2.5%;
  }

  .agency-list-content {
    width: 95%;
    margin: 0 auto;
  }

  .agency-search-bar-row {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 16px;
    gap: 24px;
  }

  .agency-search-bar-container {
    position: relative;
    width: 420px;
  }

  .agency-search-input {
    width: 100%;
    font-size: 1rem;
    padding: 14px 48px 14px 18px;
    border: 2px solid #e0e0e0;
    border-radius: 32px;
    outline: none;
    background: #fff;
  }

  .agency-search-clear {
    position: absolute;
    right: 40px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2rem;
    color: #23262b;
    cursor: pointer;
    user-select: none;
  }

  .agency-search-icon {
    font-size: 2.2rem;
    color: #23262b;
    cursor: pointer;
    user-select: none;
  }

  .agency-table-container {
    margin-top: 16px;
  }

  .agency-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    font-size: 1rem;
    border: 1px solid #bdbdbd;
    border-radius: 12px;
    overflow: hidden;
  }

  .agency-table th {
    background: #23262b;
    color: #fff;
    padding: 8px 0;
    font-weight: 500;
    border-right: 1px solid #bdbdbd;
  }

  .agency-table th:first-child {
    border-top-left-radius: 12px;
  }

  .agency-table th:last-child {
    border-top-right-radius: 12px;
    border-right: none;
  }

  .agency-table td {
    background: #f7f8fa;
    color: #23262b;
    text-align: center;
    padding: 8px 0;
    border-top: 1px solid #e0e0e0;
    border-right: 1px solid #e0e0e0;
  }

  .agency-table td:last-child {
    border-right: none;
  }

  .agency-pagination-row {
    margin-top: 16px;
  }
</style>

<div class="agency-list-container w-100">
  <!-- Tiêu đề trang -->
  <h1 class="agency-list-title">
    Danh sách đại lý
  </h1>

  <!-- Container bọc search bar và table -->
  <div class="agency-list-content">
    <!-- Thanh tìm kiếm (search bar) căn phải -->
    <div class="agency-search-bar-row">
      <div class="agency-search-bar-container">
        <input
          type="text"
          value="Value"
          class="agency-search-input"
        />
        <!-- Icon clear (x) -->
        <i
          class="bi bi-x agency-search-clear"
          onclick="this.previousElementSibling.value='';"
        ></i>
      </div>
      <!-- Icon search -->
      <i class="bi bi-search agency-search-icon"></i>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="agency-table-container">
      <table class="agency-table">
        <thead>
          <tr>
            <th class="text-center">Tên đại lý</th>
            <th class="text-center">Mã đại lý</th>
            <th class="text-center">Loại đại lý</th>
            <th class="text-center">Quận</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>No-Data</td>
            <td>No-Data</td>
            <td>No-Data</td>
            <td>No-Data</td>
          </tr>
          <tr>
            <td>No-Data</td>
            <td>No-Data</td>
            <td>No-Data</td>
            <td>No-Data</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Pagination căn giữa -->
    <div class="d-flex justify-content-center agency-pagination-row">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#">Previous</a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>