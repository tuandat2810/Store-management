<main class="d-flex justify-content-center align-items-center min-vh-100 bg-secondary w-100 px-0">
    <div class="card p-4 shadow" style="max-width: 400px; width: 100%;">
        <!-- Title -->
        <h2 class="card-title text-center mb-4">Quên mật khẩu</h2>

        <!-- Forgot Password Form -->
        <form action="/user/forgot-password" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email khôi phục</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="submit" class="btn w-100" style="background-color: #343a40; color: white;">Gửi liên kết đặt lại</button>
        </form>

        <!-- Back to login -->
        <div class="text-center mt-3">
            <a href="/user/login" class="text-muted text-decoration-none" style="font-size: 14px;">Quay lại đăng nhập</a>
        </div>
    </div>
</main>
